@model IEnumerable<MyBlogApp.Models.BlogModel>
@{
    Layout = "_LayoutContent";
}

    <div class="text-white bg-dark mb-3">
        Arşiv
    </div>
@if (Model.Count() > 0)
{
    @foreach (var item in Model)
    {
        <div class="card d-inline-block m-2" style="width:70%;">
            <img class="card-img-top" src="/@item.Image" alt="Card image" style="width:100%">
            <div class="card-body">
                <h4 class="card-title">@item.BlogName</h4>
                <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.Id" class="btn  float-right btn-sm bg-dark  text-white">Daha Fazla...</a>

            </div>
        </div>
    }

}
else
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Bu tarihte yazı bulunmamaktadır.</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

